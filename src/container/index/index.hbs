<div class="page">
    <h1 class="title">To-do list</h1>
    {{!-- div замість form для того, щоб не відправлявся запит на сервер при натисканні на button --}}
    <div class="form">
        <input type="text" class="form__input" placeholder="Введіть задачу...">
        <button class="form__button">Додати</button>
    </div>
    <main class="task__list">
    </main>
</div>

<template id="task">
    <div class="task">
        <span class="task__number">1.</span>
        <p class="task__text">Some placeholder content in a paragraph below the heading and date.</p>
        <button class="task__button task__button--do"></button>
        <button class="task__button task__button--delete"></button>
    </div>
</template>

